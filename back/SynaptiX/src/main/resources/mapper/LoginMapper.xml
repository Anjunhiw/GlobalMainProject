<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.LoginMapper">
    <!-- 기본 형태의 HomeMapper.xml 예시 -->
    <!-- resultMap 예시 -->
    <resultMap id="LoginDTOMap" type="com.example.demo.model.LoginDTO">
        <!-- 컬럼과 프로퍼티 매핑 예시 -->
        <id property="id" column="pk" />
        <result property="name" column="name" />
        <!-- ...필요시 추가... -->
    </resultMap>

    <!-- select 예시 -->
    <select id="selectName" resultMap="LoginDTOMap">
        SELECT pk, Name FROM member WHERE ID = #{id} AND Password = #{password}
    </select>
</mapper>
