<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.home.HomeMapper">
    <!-- 기본 형태의 HomeMapper.xml 예시 -->
    <!-- resultMap 예시 -->
    <resultMap id="HomeDTOMap" type="com.example.demo.model.HomeDTO">
        <!-- 컬럼과 프로퍼티 매핑 예시 -->
        <id property="id" column="pk" />
        <result property="name" column="name" />
        <!-- ...필요시 추가... -->
    </resultMap>

    <!-- select 예시 -->
    <select id="selectHomeList" resultMap="HomeDTOMap">
        SELECT pk, Name FROM member
    </select>

    <!-- insert 예시 -->
    <insert id="insertHome" parameterType="com.example.demo.model.HomeDTO">
        INSERT INTO member (id, name) VALUES (#{id}, #{name})
    </insert>

    <!-- update 예시 -->
    <update id="updateHome" parameterType="com.example.demo.model.HomeDTO">
        UPDATE member SET name = #{name} WHERE id = #{id}
    </update>

    <!-- delete 예시 -->
    <delete id="deleteHome" parameterType="int">
        DELETE FROM member WHERE id = #{id}
    </delete>
</mapper>
